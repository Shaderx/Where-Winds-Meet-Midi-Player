{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "WWM Overlay",
  "version": "1.1.9-c",
  "identifier": "com.wwm.overlay",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "WWM MIDI Player",
        "width": 1180,
        "height": 620,
        "minWidth": 960,
        "minHeight": 540,
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "alwaysOnTop": true,
        "skipTaskbar": false,
        "center": false,
        "x": 50,
        "y": 50,
        "resizable": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": ["icons/icon.ico"]
  }
}
